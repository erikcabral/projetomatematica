<%= form_for @contact, html: {class: "form-horizontal"} do |f| %>
  <% if @contact.errors.any? %>
    <div class='teste'><%= "Favor preencher todos os campos" %></div>
  <% end %>
  
  <!-- Name -->
  <div class="form-group">
    <label class="control-label col-md-3" for="name">Nome</label>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-control", id: "name" %>
    </div>
  </div>
  <!-- Email -->
  <div class="form-group">
    <label class="control-label col-md-3" for="email">Email</label>
    <div class="col-md-9">
      <%= f.text_field :email, class: "form-control", id: "email" %>
    </div>
  </div>
  <!-- Subject -->
  <div class="form-group">
    <label class="control-label col-md-3" for="website">Assunto</label>
    <div class="col-md-9">
      <%= f.text_field :subject, class: "form-control", id: "subject" %>
    </div>
  </div>
  <!-- Message -->
  <div class="form-group">
    <label class="control-label col-md-3" for="comment">Mensagem</label>
    <div class="col-md-9">
      <%= f.text_area :message, class: "form-control", id: "message", rows: "6" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-9 col-md-offset-3">
      <%= f.submit "Enviar", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
